<!doctype html>
<html lang="en">
<head>
    <link href="~/css/Common/Common.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.8/css/jquery.dataTables.min.css">


    <style>
      
    </style>
</head>
<body>
    <div class="container center" >
        <h2 class="text-center">Ticket details</h2>
        <table class="Setborder Dashboard">
            <tr>
                <td style="font-weight:600" >
                    Total Ticket :
                </td>
                <td>
                    @ViewBag.TotalTicket
                </td>


                <td style="font-weight:600">
                    Resolved Ticket :
                </td>
                <td>
                    @ViewBag.ResolvedTicket
                </td>


                <td style="font-weight:600">
                    WIP Ticket :
                </td>
                <td>
                    @ViewBag.Wipticket
                </td>
            </tr>

            <tr>
                <td style="font-weight:600">
                    Un Resolved Ticket :
                </td>
                <td>
                    @ViewBag.UnresolvedTicket
                </td>


                <td style="font-weight:600">
                    ReAssigned Ticket :
                </td>
                <td>
                    @ViewBag.PendingTicket
                </td>


                <td style="font-weight:600">
                    Closed Ticket :
                </td>
                <td>
                    @ViewBag.ClosedTicket
                </td>
            </tr>
        </table>
        <hr />

        <div class="row">
           
            <form>
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group row">
                                <label for="txtFromDate" class="col-sm-4 col-form-label">From Date :</label>
                                <div class="col-sm-8">
                                    <input type="date" class="form-control" id="txtFromDate" placeholder="From Date">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group row">
                                <label for="txtToDate" class="col-sm-4 col-form-label">To Date :</label>
                                <div class="col-sm-8">
                                    <input type="date" class="form-control" id="txtToDate" placeholder="To Date">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group row">
                                <label for="IdStatus" class="col-sm-4 col-form-label">Status :</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="ddlSatus" placeholder="Status">
                                    </select>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @* ------------Second Row---------------*@

                <div class="col-md-12">
                    <div class="row">
                       
                      
                        <div class="col-md-4">
                            <div class="form-group row">
                                <label for="Idgroup" class="col-sm-4 col-form-label">Group :</label>

                                <div class="col-sm-8">
                                    <select class="form-control"  id="ddlgroup" placeholder="Group">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label for="ComplainIds" class="col-sm-4 col-form-label"> Complaint ID :</label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" style="height:auto !important" id="ComplainIds" placeholder="Enter Complaint ID with comma(,) seperated"></textarea>
                                </div>
                          
                            </div>
                    
                        </div>
                        <div class="col-md-2" >
                    
                            <input type="button" id="btnsubmit" value="Search" class="btn btn-primary mt-2 ml-3" style="float:right" />
                        </div>
                    </div>

                </div>
               
            </form>
        </div>

        <div class="row">
            <div class="col-md-12">
                  <table style="height: 230px" class="table table-bordered table-responsive" id="tblIssueLog">
                        <thead>
                            <tr>
                                <th style="width:150px" >Ticket ID</th>
                             
                                <th style="width:150px" >Brand</th>
                                <th style="width:150px" >Department Name</th>
                         
                                <th style="width:150px">Location</th>
                                <th style="width:150px">UserType</th>
                                <th style="width:150px" >Severity</th>
                                <th style="width:150px" >Status</th>
                                <th width="200" >Problem Name</th>
                                <th >Problem Details</th>
                                <th style="width:150px" >Report Time</th>
                                <th style="width:150px">Expected Closure Date</th>
                                <th style="width:150px">Closure Date</th>
                                <th style="width:150px">Assigned To</th>
                                <th>Reported By</th>
                                <th style="width:150px">Engineer Remarks</th>
                                <th style="width:150px">Resolved By</th>
                            </tr>
                        </thead>

                    </table>
            </div>
        </div>
    
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <script src="https://cdn.datatables.net/1.10.8/js/jquery.dataTables.min.js" defer="defer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" ></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" ></script>
    <script  type="text/javascript" language="javascript" src="~/scripts/logissue.js"></script>
</body>
</html>